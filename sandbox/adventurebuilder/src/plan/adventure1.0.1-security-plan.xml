<!-- $Rev$ $Date$ -->

<configuration
    xmlns="http://geronimo.apache.org/xml/ns/deployment"
    parentId="org/apache/geronimo/Security"
    configId="org/apache/geronimo/AdventureSecurity1.0.1"
    >
    <gbean name="adventure-realm"
        class="org.apache.geronimo.security.realm.GenericSecurityRealm">
        <attribute name="realmName">adventure-realm</attribute>
        <xml-reference name="LoginModuleConfiguration">
            <lc:login-config  xmlns:lc="http://geronimo.apache.org/xml/ns/loginconfig">
                <lc:login-module control-flag="REQUIRED" server-side="true">
                    <lc:login-domain-name>adventure-realm</lc:login-domain-name>
                    <lc:login-module-class>org.apache.geronimo.security.realm.providers.PropertiesFileLoginModule</lc:login-module-class>
                    <lc:option name="usersURI">var/security/adventure1.0.1_users.properties</lc:option>
                    <lc:option name="groupsURI">var/security/adventure1.0.1_groups.properties</lc:option>
                </lc:login-module>
            </lc:login-config>
        </xml-reference>
        <reference name="ServerInfo">
            <module>org/apache/geronimo/System</module>
            <name>ServerInfo</name>
        </reference>
        <reference name="LoginService">
            <module>org/apache/geronimo/Security</module>
            <name>JaasLoginService</name>
        </reference>
    </gbean>
</configuration>
