                      <cmp-field-name>lineNumber</cmp-field-name>
                      <table-column>LINENUMBER</table-column>
                  </cmp-field-mapping>
                  <cmp-field-mapping>
                      <cmp-field-name>quantity</cmp-field-name>
                      <table-column>QUANTITY</table-column>
                  </cmp-field-mapping>
