                          </cmr-field-mapping>
                      </role-mapping>
                  </ejb-relationship-role>
              </ejb-relation>    
              <ejb-relation>
                  <ejb-relationship-role>
                      <relationship-role-source>
                        <ejb-name>PurchaseOrderEJB</ejb-name>
                      </relationship-role-source>
                      <cmr-field>
                          <cmr-field-name>creditCard</cmr-field-name>
                      </cmr-field>
                      <role-mapping>
