<project>
  <pomVersion>3</pomVersion>
  <extend>${basedir}/etc/project.xml</extend>
  
  <!-- ===================== -->
  <!-- Module Identification -->
  <!-- ===================== -->
  
  <name>Geronimo</name>
  <id>geronimo</id>
  
  <currentVersion>1.0-alpha-1-SNAPSHOT</currentVersion>
  
  
  <!-- =================== -->
  <!-- Build Specification -->
  <!-- =================== -->
  
  <build>
    <!--
       | HACK: this is a quick hack as we've only got 1 module so far
       |       switching to a multi-project reactor based build real soon
     -->
    <sourceDirectory>${basedir}/modules/core/src/java</sourceDirectory>
    <unitTestSourceDirectory>${basedir}/modules/core/src/test</unitTestSourceDirectory>
    
    <resources>
      <resource>
        <directory>${basedir}/modules/core/src/conf</directory>
        <includes>
          <include>*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>

</project>
