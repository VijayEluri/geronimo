    <build>
        <nagEmailAddress>geronimo-dev@incubator.apache.org</nagEmailAddress>

		<!-- this is a quick hack as we've only got 1 module so far     -->
		<!-- switching to a multi-project reactor based build real soon -->
<!--
-->
        <sourceDirectory>${basedir}/modules/core/src/java</sourceDirectory>
        <unitTestSourceDirectory>${basedir}/modules/core/src/test</unitTestSourceDirectory>
        <unitTest>
            <includes>
                <include>**/*TestCase.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
        </unitTest>
        <resources>
            <resource>
                <directory>${basedir}/src/conf</directory>
                <includes>
                    <include>*.properties</include>
                </includes>
            </resource>
        </resources>
    </build>

