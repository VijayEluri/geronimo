            <ant:arg value="${distDir}/config/debug-tool.car"/>
            <ant:arg value="- -store"/>
            <ant:arg value="${distDir}/config-store"/>
            <ant:arg value="- -deployer"/>
            <ant:arg value="org/apache/geronimo/ServiceDeployer"/>
        </ant:java>
-->
    </goal>

</project>
