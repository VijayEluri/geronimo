<!--
Child of the org/apache/geronimo/RuntimeDeployer configuration that includes the runtime deployment services
-->
<configuration
    xmlns="http://geronimo.apache.org/xml/ns/deployment"
    configId="org/apache/geronimo/RemoteClassLoadingDeployer"
    parentId="org/apache/geronimo/RuntimeDeployer"
    >

    <dependency>
        <uri>geronimo/jars/geronimo-classloader-server-${geronimo_version}.jar</uri>
    </dependency>

    <gbean name="HTTPClassLoaderServer" class="org.apache.geronimo.classloaderserver.http.HTTPClassLoaderServer">
        <reference name="JettyContainer"><module>org/apache/geronimo/Server</module><name>JettyWebContainer</name></reference>
        <reference name="JettyConnector"><module>org/apache/geronimo/Server</module><name>JettyWebConnector</name></reference>
    </gbean>

    <gbean name="ServerConfigurationClassLoaderExporter" class="org.apache.geronimo.classloaderserver.ConfigurationClassLoaderExporter">
        <reference name="ClassLoaderServer"><name>HTTPClassLoaderServer</name></reference>
        <reference name="Configuration"><gbean-name>geronimo.config:name="org/apache/geronimo/Server"</gbean-name></reference>
    </gbean>

    <gbean name="RuntimeDeployerConfigurationClassLoaderExporter" class="org.apache.geronimo.classloaderserver.ConfigurationClassLoaderExporter">
        <reference name="ClassLoaderServer"><name>HTTPClassLoaderServer</name></reference>
        <reference name="Configuration"><gbean-name>geronimo.config:name="org/apache/geronimo/RuntimeDeployer"</gbean-name></reference>
    </gbean>

</configuration>
