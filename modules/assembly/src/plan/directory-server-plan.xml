<!--
Configuration for the main ring of a Geronimo server.

This configuration should contain those services normally provided
by the server.
-->
<configuration
    xmlns="http://geronimo.apache.org/xml/ns/deployment-1.0"
    configId="geronimo/directory/${pom.currentVersion}/car"
    parentId="geronimo/j2ee-server/${pom.currentVersion}/car"
    >

    <dependency>
        <uri>antlr/antlr/${antlr_version}/jar</uri>
    </dependency>

    <!-- required for rar 1.5 to load realms -->
    <dependency>
        <uri>regexp/regexp/${regexp_version}/jar</uri>
    </dependency>

    <!-- Directory -->
    <dependency>
        <uri>geronimo/geronimo-directory/${geronimo_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>org.slf4j/slf4j-simple/${slf4j_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory/apacheds-core/${apacheds_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory/apacheds-shared/${apacheds_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-protocols/ldap-protocol/${ldap_protocols_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-protocols/kerberos-protocol/${kerberos_protocols_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-network/mina/${mina_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-asn1/asn1-ber/${asn1_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-asn1/asn1-codec/${asn1_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-asn1/asn1-der/${asn1_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-shared/apache-ldapber-provider/${apacheds_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-shared/kerberos-common/${kerberos_common_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>directory-shared/ldap-common/${apacheds_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>commons-io/commons-io/${commons_io_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>commons-primitives/commons-primitives/${commons_primitives_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>commons-collections/commons-collections/${commons_collections_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>commons-lang/commons-lang/${commons_lang_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>oro/oro/${oro_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>jdbm/jdbm/${jdbm_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>xmlbeans/xbean/${xmlbeans_version}/jar</uri>
    </dependency>
    <dependency>
        <uri>stax/stax-api/${stax_api_version}/jar</uri>
    </dependency>

    <gbean gbeanName="geronimo.server:name=DirectoryService" class="org.apache.geronimo.directory.DirectoryGBean">
        <attribute name="providerURL">ou=system</attribute>
        <attribute name="securityAuthentication">simple</attribute>
        <attribute name="securityPrincipal">uid=admin,ou=system</attribute>
        <attribute name="securityCredentials">secret</attribute>
        <attribute name="anonymousAccess">true</attribute>
        <attribute name="enableNetworking">true</attribute>
        <attribute name="host">0.0.0.0</attribute>
        <attribute name="port">${PlanLdapPort}</attribute>
        <attribute name="configFile">var/ldap/conf/directory.xml</attribute>
        <reference name="ServerInfo"><module>geronimo/system/${pom.currentVersion}/car</module><name>ServerInfo</name></reference>
    </gbean>

</configuration>
