        <dependency>
            <id>dom4j</id>
            <version>1.4</version>
            <properties>
                <runtime>true</runtime>
            </properties>
        </dependency>

        <dependency>
            <id>cglib+full</id>
            <version>2.0-RC2</version>
            <url>http://cglib.sourceforge.net</url>
            <properties>
                <runtime>true</runtime>
            </properties>
        </dependency>

        <dependency>
            <groupId>xml-commons-resolver</groupId>
