        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
            <resources>
                <resource>
                    <directory>${basedir}/src/test-data</directory>
                    <includes>
                        <include>*.properties</include>
                    </includes>
                </resource>
                <resource>
                    <directory>${basedir}/src/schema</directory>
                    <includes>
                        <include>*.xsd</include>
                        <include>*.dtd</include>
                    </includes>
                </resource>
            </resources>
        </unitTest>
    </build>
</project>
