            </properties>
        </dependency>

        <!-- Module Dependencies -->

        <dependency>
            <groupId>geronimo</groupId>
            <artifactId>geronimo-common</artifactId>
            <version>DEV</version>
            <properties>
                <module>true</module>
            </properties>
        </dependency>

        <dependency>
            <groupId>geronimo</groupId>
            <artifactId>geronimo-kernel</artifactId>
            <version>DEV</version>
            <properties>
                <module>true</module>
            </properties>
