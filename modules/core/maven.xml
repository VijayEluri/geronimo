    <ant:jjtree target="src/java/geronimo/persistence/ejb/ejbql/EJBQL20Parser.jjt"
                outputdirectory="${maven.javacc.compile.src}/geronimo/persistence/ejb/ejbql"
                javacchome="${maven.repo.local}/javacc/jars" />
