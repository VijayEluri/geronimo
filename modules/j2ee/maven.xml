<project default="default"
    xmlns:j="jelly:core"
    xmlns:ant="jelly:ant"
    xmlns:maven="jelly:maven"
    xmlns:xmlbeans="geronimo:xmlbeans">

    <preGoal name="java:compile">
        <xmlbeans:schema2java
            sourcedir="${basedir}/src"
            sourceschema="schema/geronimo-application.xsd"
            xmlconfigs="${basedir}/src/schema/xmlconfig.xml"
            targetdir="${basedir}/target/xmlbeans"
            cataloglocation="${basedir}/../../specs/schema/src/catalog/resolver-catalog.xml"/>
    </preGoal>

    <preGoal name="test:compile">
        <!-- Build test-ejb-jar -->
        <ant:mkdir dir="${basedir}/target/test-ejb-jar/META-INF"/>
        <copy todir="${basedir}/target/test-ejb-jar/META-INF">
            <fileset dir="${basedir}/src/test-ear/test-ejb-jar/META-INF"/>
        </copy>

        <ant:javac srcdir="${basedir}/src/test-ear/test-ejb-jar"
            destdir="${basedir}/target/test-ejb-jar"
            source="${maven.compile.source}"
            target="${maven.compile.target}"
            debug="on"
            fork="true">
            <ant:classpath>
                <ant:path refid="maven.dependency.classpath"/>
                <ant:pathelement path="${maven.build.dest}"/>
            </ant:classpath>
        </ant:javac>
        
        <ant:jar destfile="${basedir}/target/test-ejb-jar.jar"
            basedir="${basedir}/target/test-ejb-jar"/>
        
        
        <!-- Build test-war -->
        <ant:jar destfile="${basedir}/target/test-war.war"
            basedir="${basedir}/src/test-ear/test-war"/>

        <!-- Build test-ear -->
        <ant:jar destfile="${basedir}/target/test-ear.ear" >
            <fileset dir="${basedir}/target">
                <include name="test-ejb-jar.jar"/>
                <include name="test-war.war"/>
            </fileset>
            <fileset dir="${basedir}/src/test-ear">
                <include name="META-INF/*"/>
            </fileset>
        </ant:jar>
        
    </preGoal>
</project>
