<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- $Revision: 1.1 $ $Date: 2004/02/12 18:12:52 $ -->

<project>
    <pomVersion>3</pomVersion>
    <extend>${basedir}/../../etc/project.xml</extend>

    <!-- ===================== -->
    <!-- Module Identification -->
    <!-- ===================== -->

    <name>Geronimo :: System</name>
    <id>geronimo-system</id>
    <shortDescription>Geronimo System</shortDescription>
    <description>Geronimo System</description>
    <url>http://incubator.apache.org/projects/geronimo/system/</url>
    <siteDirectory>/www/incubator.apache.org/projects/geronimo/system</siteDirectory>
    <distributionDirectory>/www/incubator.apache.org/projects/system/builds/deployment</distributionDirectory>

    <currentVersion>DEV</currentVersion>

    <!-- ============ -->
    <!-- Dependencies -->
    <!-- ============ -->

    <dependencies>
        <dependency>
            <groupId>geronimo</groupId>
            <artifactId>geronimo-kernel</artifactId>
            <version>DEV</version>
            <properties>
                <module>true</module>
            </properties>
        </dependency>

        <dependency>
            <id>commons-logging</id>
            <version>1.0.3</version>
            <url>http://jakarta.apache.org/commons/logging/</url>
        </dependency>

        <dependency>
            <id>log4j</id>
            <version>1.2.8</version>
            <url>http://jakarta.apache.org/log4j</url>
        </dependency>

        <dependency>
            <id>mx4j</id>
            <version>SNAPSHOT</version>
        </dependency>
    </dependencies>


    <!-- =================== -->
    <!-- Build Specification -->
    <!-- =================== -->

    <build>
        <unitTest>
            <includes>
                <include>**/*Test.java</include>
            </includes>
            <excludes>
                <exclude>**/Abstract*.java</exclude>
            </excludes>
        </unitTest>
    </build>
</project>
